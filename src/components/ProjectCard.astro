---
interface Props {
  title: string;
  description: string;
  tags: string[];
  github?: string;
  live?: string;
  image?: string;
  stars?: number;
  slug?: string;
}

const { title, description, tags, github, live, stars, slug } = Astro.props;
---

<article class="project-card" data-tilt>
  {slug && <a href={`/projects/${slug}`} class="stretched-link" aria-label={`View ${title} case study`} />}
  <div class="card-content">
    <div class="card-header">
      <div class="header-left">
        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="folder-icon"><path d="M20 20a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2h-7.9a2 2 0 0 1-1.69-.9L9.6 3.9A2 2 0 0 0 7.93 3H4a2 2 0 0 0-2 2v13a2 2 0 0 0 2 2Z"/></svg>
        {stars !== undefined && stars > 0 && (
          <div class="stars-badge">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor" stroke="none"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
            <span>{stars}</span>
          </div>
        )}
      </div>
      <div class="card-links">
        {github && (
          <a href={github} target="_blank" rel="noopener noreferrer" aria-label="GitHub Repository" title="View Source">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
          </a>
        )}
        {live && (
          <a href={live} target="_blank" rel="noopener noreferrer" aria-label="Live Demo" title="Live Demo">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" x2="21" y1="14" y2="3"/></svg>
          </a>
        )}
      </div>
    </div>
    <h3 class="card-title">{title}</h3>
    <p class="card-description">{description}</p>
    <div class="card-tags">
      {tags.map((tag) => (
        <span class="tag">{tag}</span>
      ))}
    </div>
  </div>
</article>

<style>
  .project-card {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    padding: 1.75rem;
    transition: all var(--transition);
    display: flex;
    flex-direction: column;
    position: relative;
    height: 100%;
  }

  .project-card:hover {
    transform: translateY(-5px);
    border-color: var(--color-primary);
    box-shadow: 0 10px 40px rgba(0, 212, 255, 0.1);
  }

  .stretched-link {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .card-content {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1.25rem;
    position: relative;
    z-index: 2;
  }

  .header-left {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .folder-icon {
    color: var(--color-primary);
  }

  .stars-badge {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--color-text-muted);
    background: rgba(255, 255, 255, 0.05);
    padding: 0.15rem 0.5rem;
    border-radius: 4px;
    border: 1px solid var(--color-border);
  }

  .stars-badge svg {
    color: #f1c40f;
  }

  .card-links {
    display: flex;
    gap: 0.75rem;
  }

  .card-links a {
    color: var(--color-text-muted);
    transition: color var(--transition);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .card-links a:hover {
    color: var(--color-primary);
  }

  .card-title {
    font-size: 1.15rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: var(--color-text);
    position: relative;
    z-index: 2;
    pointer-events: none;
  }

  .card-description {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    position: relative;
    z-index: 2;
    pointer-events: none;
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: auto;
    position: relative;
    z-index: 2;
    pointer-events: none;
  }

  .tag {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-primary);
    background: rgba(0, 212, 255, 0.08);
    padding: 0.25rem 0.65rem;
    border-radius: 20px;
  }

  /* 3D Tilt Styles */
  .project-card[data-tilt] {
    transform-style: preserve-3d;
    perspective: 1000px;
  }

  .project-card[data-tilt] .card-content {
    transform: translateZ(20px);
  }
</style>

<script>
  function initTilt() {
    const cards = document.querySelectorAll('[data-tilt]');
    
    cards.forEach(card => {
      const maxTilt = 8; // Max tilt in degrees
      
      card.addEventListener('mousemove', (e: any) => {
        const rect = card.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        
        const centerX = rect.width / 2;
        const centerY = rect.height / 2;
        
        const tiltX = ((y - centerY) / centerY) * maxTilt;
        const tiltY = ((centerX - x) / centerX) * maxTilt;
        
        (card as HTMLElement).style.transform = `perspective(1000px) rotateX(${tiltX}deg) rotateY(${tiltY}deg) scale(1.02)`;
      });
      
      card.addEventListener('mouseleave', () => {
        (card as HTMLElement).style.transform = 'perspective(1000px) rotateX(0) rotateY(0) scale(1)';
      });
    });
  }
  
  // Run on load
  initTilt();
  
  // Run after view transitions
  document.addEventListener('astro:after-swap', initTilt);
</script>
