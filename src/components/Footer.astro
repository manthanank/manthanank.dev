---
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../i18n/index';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const currentYear = new Date().getFullYear();

const socialLinks = [
  { href: 'https://github.com/manthanank', label: 'GitHub', icon: 'github' },
  { href: 'https://linkedin.com/in/manthanank', label: 'LinkedIn', icon: 'linkedin' },
  { href: 'https://x.com/manthan_ank', label: 'X', icon: 'twitter' },
  { href: 'mailto:manthan.ank46@gmail.com', label: 'Email', icon: 'email' },
];
---

<footer class="footer">
  <div class="container footer-content">
    <div class="footer-top">
      <div class="footer-brand">
        <a href={getLocalizedPath('/', lang)} class="footer-logo">
          <span class="logo-bracket">&lt;</span>
          <span class="logo-name">MA</span>
          <span class="logo-bracket">/&gt;</span>
        </a>
        <p class="footer-tagline">{t('footer.tagline')}</p>
      </div>
      <div class="footer-socials">
        {socialLinks.map((link) => (
          <a href={link.href} target="_blank" rel="noopener noreferrer" class="social-link" aria-label={link.label} title={link.label}>
            {link.icon === 'github' && (
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
            )}
            {link.icon === 'linkedin' && (
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
            )}
            {link.icon === 'twitter' && (
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
            )}
            {link.icon === 'email' && (
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
            )}
          </a>
        ))}
      </div>
    </div>
    <div class="footer-bottom">
      <p>&copy; {currentYear} Manthan Ankolekar. All rights reserved.</p>
      <a href="https://astro.build" target="_blank" rel="noopener noreferrer" class="built-with">
        <span class="rocket">ðŸš€</span>
        Built with <span class="astro-text">Astro</span>
      </a>
    </div>
  </div>
</footer>

<style>
  .footer {
    border-top: 1px solid var(--color-border);
    padding: 3rem 0 1.5rem;
    margin-top: 2rem;
  }

  .footer-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .footer-logo {
    font-family: var(--font-mono);
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--color-text);
    display: flex;
    gap: 2px;
  }

  .footer-logo:hover {
    color: var(--color-text);
  }

  .logo-bracket {
    color: var(--color-primary);
  }

  .logo-name {
    background: linear-gradient(135deg, var(--color-gradient-start), var(--color-gradient-end));
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .footer-tagline {
    color: var(--color-text-muted);
    margin-top: 0.5rem;
    font-size: 0.9rem;
  }

  .footer-socials {
    display: flex;
    gap: 0.75rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 42px;
    height: 42px;
    border-radius: 10px;
    background: var(--color-bg-alt);
    color: var(--color-text-muted);
    transition: all var(--transition);
    border: 1px solid var(--color-border);
  }

  .social-link:hover {
    color: var(--color-primary);
    background: rgba(0, 212, 255, 0.1);
    border-color: var(--color-primary);
    transform: translateY(-3px);
  }

  .footer-bottom {
    text-align: center;
    padding-top: 1.5rem;
    color: var(--color-text-muted);
    font-size: 0.85rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
  }

  .built-with {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.8rem;
    color: var(--color-text-muted);
    padding: 0.4rem 0.9rem;
    border-radius: 20px;
    background: var(--color-bg-alt);
    border: 1px solid var(--color-border);
    transition: all var(--transition);
  }

  .built-with:hover {
    color: var(--color-primary);
    border-color: var(--color-primary);
    background: rgba(0, 212, 255, 0.05);
  }

  .built-with .rocket {
    display: inline-block;
    transition: transform 0.4s cubic-bezier(0.5, 0, 0, 1);
  }

  .built-with:hover .rocket {
    animation: rocket-launch 0.6s ease-out forwards;
  }

  @keyframes rocket-launch {
    0% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-8px) rotate(-15deg);
    }
    100% {
      transform: translateY(-3px) rotate(-10deg);
    }
  }

  .astro-text {
    font-weight: 600;
    background: linear-gradient(135deg, #ff5d01, #ff8a01);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  @media (max-width: 600px) {
    .footer-top {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
