---
import { languages, type Lang } from '../i18n/index';

interface Props {
  currentLang?: Lang;
}

const { currentLang = 'en' } = Astro.props;
const currentPath = Astro.url.pathname;

// Get path without language prefix for switching
function getPathWithoutLang(path: string): string {
  const segments = path.split('/').filter(Boolean);
  if (segments[0] in languages) {
    return '/' + segments.slice(1).join('/') || '/';
  }
  return path;
}

const basePath = getPathWithoutLang(currentPath);
---

<div class="lang-switcher">
  <button class="lang-trigger" aria-label="Change language" id="lang-trigger">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="12" cy="12" r="10"/>
      <path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"/>
      <path d="M2 12h20"/>
    </svg>
    <span class="current-lang">{currentLang.toUpperCase()}</span>
  </button>
  
  <div class="lang-dropdown" id="lang-dropdown" aria-hidden="true">
    {Object.entries(languages).map(([code, name]) => (
      <a 
        href={code === 'en' ? basePath : `/${code}${basePath}`}
        class:list={['lang-option', { active: code === currentLang }]}
        data-lang={code}
      >
        <span class="lang-code">{code.toUpperCase()}</span>
        <span class="lang-name">{name}</span>
        {code === currentLang && (
          <svg class="check-icon" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="20 6 9 17 4 12"/>
          </svg>
        )}
      </a>
    ))}
  </div>
</div>

<script>
  function initLangSwitcher() {
    const trigger = document.getElementById('lang-trigger');
    const dropdown = document.getElementById('lang-dropdown');
    
    if (!trigger || !dropdown) return;
    
    trigger.addEventListener('click', (e) => {
      e.stopPropagation();
      const isOpen = dropdown.classList.contains('open');
      dropdown.classList.toggle('open');
      dropdown.setAttribute('aria-hidden', isOpen ? 'true' : 'false');
    });
    
    // Close on outside click
    document.addEventListener('click', () => {
      dropdown.classList.remove('open');
      dropdown.setAttribute('aria-hidden', 'true');
    });
    
    // Save language preference
    dropdown.querySelectorAll('.lang-option').forEach(option => {
      option.addEventListener('click', () => {
        const lang = (option as HTMLElement).dataset.lang;
        if (lang) {
          localStorage.setItem('preferred-lang', lang);
        }
      });
    });
  }
  
  initLangSwitcher();
  document.addEventListener('astro:after-swap', initLangSwitcher);
</script>

<style>
  .lang-switcher {
    position: relative;
  }
  
  .lang-trigger {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.4rem 0.75rem;
    background: var(--color-bg-alt);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    color: var(--color-text-muted);
    cursor: pointer;
    font-size: 0.8rem;
    font-weight: 500;
    transition: all var(--transition);
  }
  
  .lang-trigger:hover {
    border-color: var(--color-primary);
    color: var(--color-text);
  }
  
  .current-lang {
    font-family: var(--font-mono);
  }
  
  .lang-dropdown {
    position: absolute;
    top: calc(100% + 8px);
    right: 0;
    min-width: 140px;
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: 10px;
    padding: 0.5rem;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.2s ease;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
    z-index: 50;
  }
  
  .lang-dropdown.open {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }
  
  .lang-option {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.6rem 0.75rem;
    border-radius: 6px;
    color: var(--color-text);
    text-decoration: none;
    transition: all 0.15s ease;
  }
  
  .lang-option:hover {
    background: rgba(0, 212, 255, 0.08);
  }
  
  .lang-option.active {
    background: rgba(0, 212, 255, 0.1);
    color: var(--color-primary);
  }
  
  .lang-code {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.15rem 0.4rem;
    background: var(--color-bg-alt);
    border-radius: 4px;
    border: 1px solid var(--color-border);
  }
  
  .lang-name {
    flex: 1;
    font-size: 0.85rem;
  }
  
  .check-icon {
    color: var(--color-primary);
  }
  
  @media (max-width: 768px) {
    .lang-trigger {
      padding: 0.5rem;
      width: 38px;
      height: 38px;
      justify-content: center;
      border-radius: 50%;
    }
    
    .current-lang {
      display: none;
    }
    
    .lang-dropdown {
      right: -10px;
    }
  }
</style>
